{
  "name": "monorepo-example/laravel",
  "version": "1.0.3",
  "type": "project",
  "description": "Monorepo containing three packages",
  "keywords": [
    "framework",
    "laravel"
  ],
  "license": "MIT",
  "require": {
    "php": "^8.1",
    "guzzlehttp/guzzle": "^7.2",
    "laravel/framework": "^10.8",
    "laravel/pint": "^1.10",
    "laravel/sanctum": "^3.2",
    "laravel/tinker": "^2.8",
    "monorepo-example/integration-alpha": "1.0.0",
    "monorepo-example/integration-beta": "1.0.0",
    "monorepo-example/integration-charlie": "1.0.0"
  },
  "require-dev": {
    "fakerphp/faker": "^1.9.1",
    "laravel/sail": "^1.18",
    "mockery/mockery": "^1.4.4",
    "nunomaduro/collision": "^7.0",
    "pestphp/pest": "^2.6",
    "pestphp/pest-plugin-laravel": "^2.0",
    "phpunit/phpunit": "^10.1",
    "spatie/laravel-ignition": "^2.0"
  },
  "repositories": [
    {
      "type": "path",
      "url": "packages/integration-alpha"
    },
    {
      "type": "path",
      "url": "packages/integration-beta"
    },
    {
      "type": "path",
      "url": "packages/integration-charlie"
    }
  ],
  "autoload": {
    "psr-4": {
      "App\\": "app/",
      "Database\\Factories\\": "database/factories/",
      "Database\\Seeders\\": "database/seeders/"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "scripts": {
    "post-autoload-dump": [
      "Illuminate\\Foundation\\ComposerScripts::postAutoloadDump",
      "@php artisan package:discover --ansi"
    ],
    "post-update-cmd": [
      "@php artisan vendor:publish --tag=laravel-assets --ansi --force"
    ],
    "post-root-package-install": [
      "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
    ],
    "post-create-project-cmd": [
      "@php artisan key:generate --ansi"
    ],
    "test": [
      "./vendor/bin/pest --parallel --testdox"
    ],
    "lint": [
      "./vendor/bin/pint --test"
    ],
    "lint-fix": [
      "./vendor/bin/pint"
    ],
    "release": "npm run release",
    "commit": "npm run commit"
  },
  "extra": {
    "laravel": {
      "dont-discover": [
        "monorepo-example/*"
      ]
    }
  },
  "config": {
    "optimize-autoloader": true,
    "preferred-install": "dist",
    "sort-packages": true,
    "allow-plugins": {
      "pestphp/pest-plugin": true,
      "php-http/discovery": true
    }
  },
  "workspaces": [
    "packages/*"
  ],
  "minimum-stability": "stable",
  "prefer-stable": true
}